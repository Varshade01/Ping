<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/join_group_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/join_group_header"
        android:textSize="14sp"
        style="@style/GroupSettingsItemHeader"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/join_group_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/join_group_message"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/join_group_header" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/group_link_input_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/join_group_edit_text_hint"
        style="@style/InTouchInputFieldWithoutBorder"
        app:layout_constraintEnd_toStartOf="@+id/group_join_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/join_group_text_view">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/InTouchInputFieldEditTextBorderless"
            android:inputType="text"
            android:maxLines="1" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/group_join_button"
        style="@style/InTouchTransparentButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/join"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="@+id/group_link_input_layout"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>