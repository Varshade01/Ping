<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="8dp">

    <ImageView
        android:id="@+id/userPhoto"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:contentDescription="@string/user_photo"
        app:layout_constraintStart_toStartOf="@+id/start_guideline"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_default_user_avatar" />

    <ImageView
        android:id="@+id/userOnlineStatus"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:contentDescription="@string/user_online_status"
        android:src="@drawable/ic_online"
        app:layout_constraintBottom_toBottomOf="@+id/userPhoto"
        app:layout_constraintEnd_toEndOf="@+id/userPhoto" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textSize="16sp"
        app:fontFamily="@font/poppins_semibold"
        app:layout_constraintStart_toEndOf="@+id/userPhoto"
        app:layout_constraintTop_toTopOf="@id/userPhoto"
        tools:text="User Name" />

    <ImageView
        android:id="@+id/muted_icon"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginStart="8dp"
        android:contentDescription="@string/user_muted_status"
        android:src="@drawable/ic_muted"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/userName"
        app:layout_constraintStart_toEndOf="@+id/userName"
        app:layout_constraintTop_toTopOf="@+id/userName"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/userJob"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textColor="@color/intouch_primary_02"
        android:textSize="10sp"
        app:fontFamily="@font/poppins"
        app:layout_constraintBottom_toBottomOf="@id/userPhoto"
        app:layout_constraintEnd_toStartOf="@+id/sendPingToUser"
        app:layout_constraintStart_toEndOf="@+id/userPhoto"
        app:layout_constraintTop_toBottomOf="@id/userName"
        tools:text="@string/hello" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/user_groups_recycler_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/sendPingToUser"
        app:layout_constraintStart_toEndOf="@+id/userPhoto"
        app:layout_constraintTop_toBottomOf="@+id/userJob"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/sendPingToUser"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@string/send_ping_to_user"
        app:layout_constraintBottom_toBottomOf="@id/userJob"
        app:layout_constraintEnd_toEndOf="@+id/end_guideline"
        app:layout_constraintTop_toTopOf="@id/userName"
        app:srcCompat="@drawable/get_intouch_quick" />

    <ImageButton
        android:id="@+id/muteUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="@id/userJob"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/userName" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/start_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/end_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
