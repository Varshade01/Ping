<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/settings_group_icon"
        android:layout_width="68dp"
        android:layout_height="68dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_default_group_avatar" />

    <Button
        android:id="@+id/btn_upload_group_image"
        style="@style/InTouchTransparentButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:enabled="true"
        android:paddingStart="12dp"
        android:paddingTop="14dp"
        android:paddingEnd="12dp"
        android:paddingBottom="14dp"
        android:text="@string/upload_change_photo"
        android:textAllCaps="true"
        app:layout_constraintBottom_toBottomOf="@+id/settings_group_icon"
        app:layout_constraintStart_toEndOf="@+id/settings_group_icon"
        app:layout_constraintTop_toTopOf="@+id/settings_group_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>