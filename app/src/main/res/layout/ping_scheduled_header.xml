<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/intouch_primary_03">

    <TextView
        android:id="@+id/ping_sent_item_shceduled_header_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/scheduled"
        android:textSize="16sp"
        app:fontFamily="@font/poppins_semibold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/scheduled_pings_folded_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/scheduled_pings_folded"
        android:layout_marginStart="19dp"
        app:layout_constraintBottom_toBottomOf="@id/ping_sent_item_shceduled_header_tv"
        app:layout_constraintStart_toEndOf="@id/ping_sent_item_shceduled_header_tv"
        app:layout_constraintTop_toTopOf="@id/ping_sent_item_shceduled_header_tv" />
</androidx.constraintlayout.widget.ConstraintLayout>