<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/intouch_background">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/group_toolbar"
        style="@style/InTouchToolbarHeader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/search_view_action_bar_height"
        android:gravity="center_vertical"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <androidx.constraintlayout.widget.Group
            android:id="@+id/clickableAreaGroupName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="groupImage,groupName,muteGroupItem,arrowDown"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/groupImage"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical|start"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_default_group_avatar"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/groupName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="5dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="16sp"
            app:fontFamily="@font/poppins_bold"
            tools:text="Some loooooooooong group name"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/muteGroupItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="11dp"
            android:src="@drawable/ic_muted"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/arrowDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/scheduled_pings_folded"
            tools:visibility="visible" />

    </com.google.android.material.appbar.MaterialToolbar>

    <androidx.constraintlayout.widget.Group
        android:id="@+id/first_login_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="noGroupImage,group_instruction,startButton"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/noGroupImage"
        style="@style/InTouchHello"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:src="@drawable/ic_group_placeholder"
        app:layout_constraintBottom_toTopOf="@+id/group_instruction"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/group_toolbar"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/group_instruction"
        style="@style/InTouchMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="75dp"
        android:layout_marginTop="16dp"
        android:text="@string/empty_group_screen"
        app:layout_constraintBottom_toTopOf="@+id/startButton"
        app:layout_constraintEnd_toEndOf="@+id/startButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/startButton"
        app:layout_constraintTop_toBottomOf="@+id/noGroupImage" />

    <Button
        android:id="@+id/startButton"
        style="@style/InTouchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:paddingVertical="9dp"
        android:text="@string/start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/group_instruction" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/groupViewNoUsers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="shareLinkGroupImage,emptyGroupText,shareLinkGroupButton"
        tools:visibility="invisible" />

    <ImageView
        android:id="@+id/shareLinkGroupImage"
        style="@style/InTouchHello"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:src="@drawable/ic_group_placeholder_for_share"
        app:layout_constraintBottom_toTopOf="@+id/emptyGroupText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/group_toolbar"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/emptyGroupText"
        style="@style/InTouchMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="16dp"
        android:text="@string/empty_group_message"
        app:layout_constraintBottom_toTopOf="@id/shareLinkGroupButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shareLinkGroupImage"
        tools:text="Empty group message will be displayed here" />

    <TextView
        android:id="@+id/noUserFoundTextView"
        style="@style/InTouchMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="135dp"
        android:text="@string/no_user_found"
        android:visibility="gone"
        app:drawableTopCompat="@drawable/no_matches_found"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/group_toolbar" />

    <Button
        android:id="@+id/shareLinkGroupButton"
        style="@style/InTouchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13.5dp"
        android:background="@drawable/transparent_button_ripple_effect"
        android:fontFamily="@font/poppins_medium"
        android:paddingHorizontal="12dp"
        android:paddingVertical="13.5dp"
        android:text="@string/share_invitation_link"
        android:textColor="@color/intouch_primary_01"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emptyGroupText" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/search_all_groups_view"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:visibility="gone"
        app:constraint_referenced_ids="search_all_groups_text_view, switch_all_groups_search" />

    <TextView
        android:id="@+id/search_all_groups_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:paddingVertical="16dp"
        android:text="@string/search_in_all_groups_text_view"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/group_toolbar" />


    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_all_groups_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:thumb="@drawable/thumb"
        app:layout_constraintBottom_toBottomOf="@+id/search_all_groups_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/search_all_groups_text_view"
        app:track="@drawable/ic_track" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/group_recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switch_all_groups_search" />

    <ProgressBar
        android:id="@+id/group_loading_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminateTint="@color/intouch_primary_01"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>

