<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="12dp">


    <ImageView
        android:id="@+id/userGroupImage"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:adjustViewBounds="true"
        android:baselineAlignBottom="true"
        android:contentDescription="@string/user_photo"
        android:scaleType="fitXY"
        app:layout_constraintBaseline_toBaselineOf="@+id/userGroupNameItem"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_group_icon" />

    <TextView
        android:id="@+id/userGroupNameItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:textSize="12sp"
        app:fontFamily="@font/poppins_semibold"
        app:layout_constraintBottom_toBottomOf="@+id/userGroupImage"
        app:layout_constraintStart_toEndOf="@+id/userGroupImage"
        app:layout_constraintTop_toTopOf="@+id/userGroupImage"
        tools:text="MyGroup" />

</androidx.constraintlayout.widget.ConstraintLayout>
