<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PingApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/intouch_primary_01</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!--InTouch colors-->
        <item name="android:textColor">@color/intouch_text</item>
        <item name="colorError">@color/intouch_error</item>
        <item name="android:fontFamily">@font/poppins</item>

    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="Theme.NoActionBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">@color/intouch_text</item>
        <item name="colorError">@color/intouch_error</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/intouch_background</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.Toolbar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">@color/intouch_text</item>
        <item name="colorError">@color/intouch_error</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/intouch_neutral_03</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="actionMenuTextColor">@color/intouch_primary_01</item>
        <item name="actionMenuTextAppearance">@style/InTouchToolbarHeader.MenuTextAppearance</item>
        <item name="android:actionBarItemBackground">@drawable/transparent_button_ripple_effect</item>
        <item name="searchViewStyle">@style/AppTheme.SearchView</item>
    </style>

    <style name="PickerDialogTheme" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="colorAccent">@color/intouch_primary_02</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/InTouchButton</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/InTouchTransparentButton</item>
    </style>

    <style name="MaterialCalendarTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">

        <!--Header Title-->
        <item name="materialCalendarHeaderTitle">@style/HeaderTitle</item>

        <!--Background-->
        <item name="colorSurface">@color/intouch_background</item>

        <!-- Header panel -->
        <item name="materialCalendarHeaderLayout">@style/HeaderPanel</item>

        <!-- Header selected date -->
        <item name="materialCalendarHeaderSelection">@style/HeaderSelectedDate</item>

        <!--Switch-to-keyboard input icon-->
        <item name="materialCalendarHeaderToggleButton">@style/SwitchToKeyboardInputIcon</item>

        <!--Year selection menu-->
        <item name="materialCalendarYearNavigationButton">@style/YearSelectionMenu</item>

        <!--Month pagination-->
        <item name="materialCalendarMonthNavigationButton">@style/MonthPagination</item>

        <!--Day of week-->
        <item name="materialThemeOverlay">@style/DatePickerThemeDarkOverlay</item>

        <!--Past days-->
        <item name="dayInvalidStyle">@style/Widget.MaterialComponents.MaterialCalendar.Day.Invalid</item>

        <!--Current Date-->
        <item name="dayTodayStyle">@style/Widget.MaterialComponents.MaterialCalendar.Day.Today</item>

        <!--Day Style-->
        <item name="dayStyle">@style/Widget.MaterialComponents.MaterialCalendar.Item</item>

        <!-- Day selected -->
        <item name="daySelectedStyle">@style/Widget.MaterialComponents.MaterialCalendar.Day.Selected</item>

        <!-- Buttons -->
        <item name="buttonBarPositiveButtonStyle">@style/InTouchButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/InTouchTransparentButton</item>

    </style>


</resources>